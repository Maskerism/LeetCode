# LeetCode
class Solution {
    public int maxArea(int[] height) {
        if(height == null || height.length == 1) return 0;
        int maxArea = 0, l = 0, r = height.length-1;
        while(l < r){
            if(height[l] <= height[r]){
                maxArea = Math.max(maxArea, (r - l) * height[l]);
                l++;
            }else{
                maxArea = Math.max(maxArea, (r - l) * height[r]);
                r--;
            }
        }
        return maxArea;
    }
}
